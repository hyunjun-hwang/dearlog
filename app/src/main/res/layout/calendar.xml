                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="6"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="7"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="8"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="9"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="10"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="11"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="12"
                android:textColor="#444"
                android:textSize="14sp" />

            <!-- 3주차: 13~19 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="13"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="14"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="15"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="16"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="17"
