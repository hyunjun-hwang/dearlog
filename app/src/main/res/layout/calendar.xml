<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 다크모드 토글 -->
    <ImageButton
        android:id="@+id/btn_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_darkmode"
        android:background="@android:color/transparent"
        android:contentDescription="다크모드"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 설정 버튼 -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting"
        android:background="@android:color/transparent"
        android:contentDescription="설정"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 캘린더 부분만: 3주차까지 표시, 디자인 수정 -->
    <LinearLayout
        android:id="@+id/calendar_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_dark_mode">

        <!-- 월 네비게이션 -->
        <LinearLayout
            android:id="@+id/month_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4월"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_array" />
        </LinearLayout>

        <!-- 요일 헤더 -->
        <GridLayout
            android:id="@+id/grid_weekdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:columnCount="7">

            <!-- 일월화수목금토 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="일"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="월"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="화"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="수"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="목"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="금"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="토"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
        </GridLayout>

        <!-- 날짜 그리드: 3주차까지 -->
        <GridLayout
            android:id="@+id/grid_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:columnCount="7">

            <!-- 1주차: 빈칸 빈칸 1~5 -->
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="#444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="#444"
                android:textSize="14sp" />

            <!-- 2주차: 6~12 -->
